#!/bin/bash -ex

if [ "$DISTRO" == "fedora:latest" ] && [ "$CC" == "gcc" ]; then
    export CFLAGS=-coverage
    export LDFLAGS=-lgcov
fi

mkdir build
cd build

meson ..
ninja -v
ninja test

if [ "$DISTRO" == "fedora:latest" ] && [ "$CC" == "gcc" ]; then
    bash <(curl -s https://codecov.io/bash)
fi
